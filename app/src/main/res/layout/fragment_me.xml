<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_backgroud">

    <RelativeLayout
        android:id="@+id/rl"
        style="@style/sign_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:addStatesFromChildren="false"
        android:alpha="50"
        android:background="@drawable/test"
        android:clickable="true"
        android:paddingBottom="0dp">

        <ImageView
            android:id="@+id/me_head"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_conners_rollpages" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_head"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/middle"
                android:layout_toStartOf="@+id/middle"
                android:gravity="right">

                <TextView
                    android:id="@+id/me_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nickname"
                    android:textColor="@color/PankerGley" />
            </LinearLayout>

            <TextView
                android:id="@+id/middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="   |   "
                android:textColor="@color/PankerGley" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/middle"
                android:layout_toRightOf="@+id/middle"
                android:gravity="left">

                <TextView
                    android:id="@+id/me_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="team"
                    android:textColor="@color/PankerGley" />
            </LinearLayout>

            <TextView
                android:id="@+id/me_myself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/middle"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="3dp"
                android:text="这个人很懒，什么都没留下"
                android:textColor="@color/PankerGley" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="0.3dp"
        android:layout_marginTop="10dp"
        android:background="@color/black_not_important" />

    <TextView
        style="@style/me_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/note"
        android:drawableStart="@drawable/note"
        android:text="联系人" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="0.3dp"
        android:background="@color/black_not_important" />

    <TextView
        style="@style/me_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/scales"
        android:drawableStart="@drawable/scales"
        android:text="比赛记录" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="0.3dp"
        android:background="@color/black_not_important" />

    <TextView
        style="@style/me_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/record_game"
        android:drawableStart="@drawable/record_game"
        android:text="交易记录" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="0.3dp"
        android:background="@color/black_not_important" />

    <TextView
        style="@style/me_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/heart"
        android:drawableStart="@drawable/heart"
        android:text="收藏" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="0.3dp"
        android:background="@color/black_not_important" />

    <TextView
        android:id="@+id/me_edit"
        style="@style/me_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/pencil"
        android:drawableStart="@drawable/pencil"
        android:text="编辑资料" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="0.3dp"
        android:background="@color/black_not_important" />
</LinearLayout>